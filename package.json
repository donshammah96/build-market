{
  "name": "build-market",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:client": "turbo run dev --filter=client",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:services": "turbo run dev --filter=email-service --filter=order-service --filter=payment-service --filter=project-service --filter=search-service",
    "dev:search": "turbo run dev --filter=search-service",
    "dev:frontend": "turbo run dev --filter=client --filter=admin",
    "dev:messaging": "turbo run dev --filter=messaging-service",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rimraf node_modules",
    "clean:cache": "turbo daemon clean && rimraf .turbo"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "ngrok": "5.0.0-beta.2"
  }
}
